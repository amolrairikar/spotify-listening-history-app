{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:PutParameter"
        ],
        "Resource": [
            "arn:aws:ssm:us-east-2:{{ACCOUNT_ID}}:parameter/spotify_refresh_token",
            "arn:aws:ssm:us-east-2:{{ACCOUNT_ID}}:parameter/spotify_last_fetched_time"
        ]
      },
      {
        "Effect": "Allow",
        "Action": [
          "s3:PutObject"
        ],
        "Resource": "arn:aws:s3:::{{S3_BUCKET_NAME}}/*"
      },
      {
        "Effect": "Allow",
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Resource": "*"
      },
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "scheduler.amazonaws.com"
        },
        "Action": "lambda:InvokeFunction",
        "Resource": "arn:aws:lambda:us-east-2:{{ACCOUNT_ID}}:function:spotify-listening-history-lambda",
        "Condition": {
          "ArnLike": {
            "aws:SourceArn": "arn:aws:scheduler:us-east-2:{{ACCOUNT_ID}}:schedule/default/spotifyListeningHistoryApp-prod-lambda-trigger"
          }
        }
      }
    ]
  }
  