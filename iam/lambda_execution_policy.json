{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:PutParameter"
        ],
        "Resource": [
            "arn:aws:ssm:us-east-2:{{ACCOUNT_ID}}:parameter/spotify_refresh_token",
            "arn:aws:ssm:us-east-2:{{ACCOUNT_ID}}:parameter/spotify_last_refresh_timestamp"
        ]
      },
      {
        "Effect": "Allow",
        "Action": [
          "s3:PutObject"
        ],
        "Resource": "arn:aws:s3:::{{S3_BUCKET_NAME}}/*"
      },
      {
        "Effect": "Allow",
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Resource": "*"
      }
    ]
  }
  